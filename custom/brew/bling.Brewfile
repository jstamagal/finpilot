###############################################################################
# NETWORKING & SECURITY
###############################################################################
brew "curlie"          # Better curl
brew "xh"              # HTTPie alternative
brew "bandwhich"       # Network utilization by process
brew "dog"             # DNS client (dig alternative)

###############################################################################
# SYSTEM & DOTFILES
###############################################################################
brew "chezmoi"         # Dotfile manager
brew "stow"            # Symlink farm manager
brew "neofetch"        # System info display (classic)

